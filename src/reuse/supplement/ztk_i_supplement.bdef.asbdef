managed implementation in class ZTK_bp_i_supplement unique;
strict;
with draft;

define behavior for ZTK_I_Supplement alias Supplement
early numbering
persistent table ZTK_supplement
draft table ZTK_suppl_d
lock master
total etag LastChangedAt
etag master LocalLastChangedAt
authorization master ( global )
{
  create;
  update;
  delete;

  field ( readonly ) SupplementID;
  field ( mandatory: create, readonly : update ) SupplementCategory;
  field ( mandatory ) Price, CurrencyCode;

  draft action resume;
  draft action Edit;
  draft action Activate;
  draft action Discard;


  validation validatePrice on save { create; update; }

  draft determine action Prepare
  { validation validatePrice; }

  association _SupplementText { create; with draft; }

  mapping for ZTK_SUPPLEMENT {
    SupplementID       = supplement_id;
    SupplementCategory = supplement_category;
    Price              = price;
    CurrencyCode       = currency_code;
    LocalCreatedBy     = local_created_by;
    LocalCreatedAt     = local_created_at;
    LocalLastChangedBy = local_last_changed_by;
    LocalLastChangedAt = local_last_changed_at;
    LastChangedAt      = last_changed_at;
  }
}

define behavior for ZTK_I_SupplementText alias SupplementText
persistent table ZTK_suppl_text
draft table ZTK_suppl_txt_d
lock dependent by _Supplement
etag master LocalLastChangedAt
authorization dependent by _Supplement
{

  association _Supplement { with draft; }

  update;
  delete;

  field ( readonly ) SupplementID;
  field ( mandatory : create, readonly : update ) LanguageCode;

  mapping for ZTK_SUPPL_TEXT {
    SupplementID       = supplement_id;
    LanguageCode       = language_code;
    Description        = description;
    LocalLastChangedAt = local_last_changed_at;
  }
}